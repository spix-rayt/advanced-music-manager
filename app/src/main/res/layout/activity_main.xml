<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.spixy.advancedmusicmanager.activities.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/musicRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/slide_mode"
        android:layout_alignParentStart="true"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="152dp">

    </android.support.v7.widget.RecyclerView>

    <ImageButton
        android:id="@+id/slide_mode"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_audiotrack_black_24dp"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="447dp" />

    <EditText
        android:id="@+id/text_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/musicRecyclerView"
        android:layout_toStartOf="@+id/slide_mode"
        android:ems="10"
        android:hint="@string/hint_filter_by_name" />


</RelativeLayout>
